<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?attr/colorSecondary">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSecondary" />
            <corners android:radius="13dp" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape
            android:shape="rectangle">
            <corners android:radius="16dp"/>
            <size
                android:height="32dp"
                android:width="32dp" />
            <stroke android:width="1dp" android:color="?attr/colorSecondary" />
        </shape>
    </item>
    <item android:id="@+id/bg_dim" android:alpha="0.1">
        <shape
            android:shape="rectangle">
            <corners android:radius="16dp"/>
            <size
                android:height="32dp"
                android:width="32dp" />
            <stroke android:width="1dp" android:color="@color/material_on_background_emphasis_medium" />
        </shape>
    </item>
</ripple>